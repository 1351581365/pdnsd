#!/bin/bash
#
# $Id: pdnsd.in,v 1.4 2001/05/17 14:14:30 tmm Exp $
#
#	/etc/rc.d/init.d/pdnsd
#
# Starts the Proxy DNS Daemon
#
# chkconfig: 2345 80 30
# description: Proxy DNS Daemon
# processname: pdnsd
# config: /etc/pdnsd.conf

test -x @prefix@/sbin/pdnsd || exit 0
[ -f @sysconfdir@/pdnsd.conf ] || exit 1

# Source function library.
. /etc/rc.d/init.d/functions

# Source networking configuration.
. /etc/sysconfig/network

# Check that networking is up.
[ ${NETWORKING} = "no" ] && exit 0

RETVAL=0

#
#	See how we were called.
#
case "$1" in
  start)
	echo -n 'Starting pdnsd: '
	daemon @prefix@/sbin/pdnsd -d
	RETVAL=$? 
	[ $RETVAL -eq 0 ] && touch /var/lock/subsys/pdnsd
	echo
	;;
  stop)
	echo -n 'Shutting down pdnsd: '
	killproc pdnsd 
	RETVAL=$? 
	[ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/pdnsd
	echo
	;;
  status)
    status pdnsd
  	exit $?
	;;
  reload|restart)
	$0 stop
	$0 start
	RETVAL=$?
  	;;
  *)
	echo "Usage: /etc/rc.d/init.d/pdnsd {start|stop|status|restart|reload}"
	exit 1
esac

exit $RETVAL
